<%- include("./partials/header") %>
<%- include("./partials/nav") %>

<div class="flex justify-center items-center flex-col px-4 sm:px-8 lg:px-16 xl:px-32 mt-10">
    <h1 class="bg-red-200 text-center text-[6vw] sm:text-[5vw] md:text-[4vw] lg:text-[3vw] xl:text-[2vw] text-red-600 font-extrabold w-[90%] sm:w-[70%] md:w-[60%] lg:w-[50%] xl:w-[40%] rounded-lg py-3 mt-20 shadow-lg">
        User Login
    </h1>
    <form class="w-full sm:w-[70%] md:w-[60%] lg:w-[50%] xl:w-[35%] mt-8 bg-white p-6 rounded-lg shadow-lg" action="/login-user" method="post">
        <div class="mb-6">
            <label for="username" class="block text-gray-700 font-bold mb-2">Username</label>
            <input class="p-3 border-2 border-slate-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-300" type="text" placeholder="Enter your username" name="username" id="username">
        </div>
        <div class="mb-6">
            <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
            <input class="p-3 border-2 border-slate-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-300" type="password" placeholder="Enter your password" name="password" id="password">
        </div>
        <a class="font-semibold text-sm sm:text-base text-blue-500 hover:text-blue-700 mb-4 inline-block" href="/forget-email">Forget password?</a>
        <button class="bg-green-600 w-full p-3 rounded-lg mt-4 font-semibold text-white hover:bg-green-700 transition duration-300">Login</button>
        <p class="font-semibold mt-4 text-center text-gray-700">Don't have an account? <a class="text-red-600 hover:text-red-700 transition duration-300" href="/register">Register</a></p>
    </form>
</div>

<%- include("./partials/footer") %>
